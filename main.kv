#: import utils kivy.utils

ScreenManager:
    HomeScreen:
        id:home
        name:'home'

<HomeScreen>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('262244')
        Rectangle:
            size:self.size
            pos:self.pos
    FloatLayout:

        Image:
            pos_hint:{'top':.98, 'center_x':0.5}
            size: "200dp","150dp"
            size_hint: 0.5, 0.2
            source:"bmi.png"
        Label:
            text:'Choose your Height'
            font_size:30
            color: 1,1,1,1
            size_hint: 1, .1
            pos_hint:{'top':.75}
        MDSlider:
            id: height_value
            min: 90
            max: 250
            value: 150
            size_hint: 1, .1
            pos_hint:{'top':.65}
        Label:
            text:'Choose your Weight'
            font_size:30
            color: 1,1,1,1
            size_hint: 1, .1
            pos_hint:{'top':.55}
        MDCard:
            size: "280dp","79dp"
            size_hint: None,None
            pos_hint:{'top':.40, 'center_x':0.5}
            md_bg_color: app.theme_cls.primary_dark
            MDIconButton:
                icon:'plus'
                user_font_size:"64sp"
                on_release:
                    root.increase()
            Label:
                text: str(root.weight) + 'kg'
                font_size:40
                color: 1,1,1,1
            MDIconButton:
                icon:'minus'
                user_font_size:"64sp"
                on_release:
                    root.decrease()
        MDRaisedButton:
            size_hint: .8, .07
            pos_hint: {'top':.2, 'center_x':.5}
            text: 'Calculate BMI'
            on_release:
                root.calculate_bmi()


